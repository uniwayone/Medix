<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appBlue</item>
        <item name="colorPrimaryVariant">@color/appBlue</item>
        <item name="colorOnPrimary">@color/appBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appBlue</item>
        <item name="colorSecondaryVariant">@color/appBlue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>

        <!--<item name="fontFamily">@font/chivo_regular</item>-->
        <item name="android:fontFamily">@font/chivo_regular</item>
       <!-- <item name="android:textColor">#000</item>-->

        <!--entry and exit transitions-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowEnterTransition">@transition/fade</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.splash3" parent="Theme.Medix">
        <item name="android:statusBarColor">@color/appBlue</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.ExtendedFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
       <!-- <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>-->
        <item name="shapeAppearanceOverlay">@style/appTheme.ExtendedFAB_corner_style</item>
    </style>
    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/appPink_FAB</item>
        <item name="colorOnSecondary">@color/appPink_FAB</item>
        <item name="colorOnSurface">@color/appPink_FAB</item>
    </style>

    <style name="appTheme.ExtendedFAB_corner_style" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppTheme.collapsingToolbar" parent="Theme.Medix">
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.BNV" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#DFEAD0D0</item>
    </style>

    <style name="AppTheme.login" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appWhite</item>
        <item name="colorOnPrimary">@color/appWhite</item>
    </style>

    <style name="AppTheme.registration" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appWhite</item>
        <item name="colorOnPrimary">@color/appWhite</item>
    </style>

    <style name="AppTheme.registration_patient" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appWhite</item>
        <item name="colorOnPrimary">@color/appWhite</item>
    </style>

    <style name="AppTheme.registration_doctor" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appWhite</item>
        <item name="colorOnPrimary">@color/appWhite</item>
    </style>

    <style name="AppTheme.main" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appGrey</item>
        <item name="colorOnPrimary">@color/appWhite</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/appGrey</item>
    </style>

    <style name="AppTheme.main.bnv" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
       <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="AppTheme.Main.BNV" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#DFEAD0D0</item>
    </style>
    <!--   <item name="colorOnPrimary">@color/appBlue</item>-->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/appGrey</item>
    </style>

    <style name="AppTheme.message" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appGrey</item>
        <item name="colorOnPrimary">@color/appWhite</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.videoCall" parent="Theme.Medix">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryVariant">@color/appGrey</item>
        <item name="colorOnPrimary">@color/appWhite</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ShapeableImageView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">4%</item>
        <item name="cornerSizeTopRight">4%</item>
        <item name="cornerSizeBottomLeft">4%</item>
        <item name="cornerSizeBottomRight">4%</item>
    </style>

    <style name="TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">none</item>
    </style>


</resources>