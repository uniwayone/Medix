<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#A33A3939"/>
            <corners
                android:radius="24dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>